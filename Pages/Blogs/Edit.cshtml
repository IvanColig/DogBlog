@page
@model DogBlog.Pages.Blogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.BlogId" />
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Description" class="control-label"></label>
                <input asp-for="Blog.Description" class="form-control" />
                <span asp-validation-for="Blog.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Blog.ImagePath" />
                @if (!string.IsNullOrEmpty(Model.Blog.ImagePath))
                {
                    <div>
                        <label>Current Image:</label>
                        <img src="@Model.Blog.ImagePath" alt="Blog Image" style="max-width: 80%; height: auto;" />
                    </div>
                }
                else
                {
                    <p>No image available</p>
                }
            </div>
            <div class="form-group">
                <label>New Image:</label>
                <input asp-for="NewImage" type="file" class="form-control" />
                <span asp-validation-for="NewImage" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
