@page
@model DogBlog.Pages_Posts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Date)
        </dd>
        <div class="form-group">
            <input type="hidden" asp-for="Post.ImagePath" />
            @if (!string.IsNullOrEmpty(Model.Post.ImagePath))
            {
                <div>
                    <label><strong>Image:</strong></label>
                    <img src="@Model.Post.ImagePath" alt="Blog Image" style="max-width: 20%; height: auto;" />
                </div>
            }
            else
            {
                <p>No image available</p>
            }
        </div>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.PostId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index" asp-route-blogId="@Model.Post.BlogId">Back to List</a>
    </form>
</div>
